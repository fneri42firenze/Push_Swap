#include "push_swap.h"

t_list	*ft_new_node(int value)
{
	t_list	*new_node;
	char	*str;

	new_node = malloc(sizeof(t_list));
	new_node->value = value;
	new_node->next = NULL;
	return (new_node);
}

t_list	*ft_create_stack(char **values)
{
	t_list	*list;
	t_list	*temp;
	int		i;

	list = ft_new_node(ft_atoi(*values));
	temp = list;
	i = 1;
	while (values[i])
	{
		temp->next = ft_new_node(ft_atoi(values[i]));
		temp = temp->next;
		i++;
	}
	return (list);
}